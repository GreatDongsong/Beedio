<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeMainFragment">

    <fragment
        android:id="@+id/homeMainFragment"
        android:name="marabillas.loremar.beedio.home.HomeMainFragment"
        android:label="HomeMainFragment" />
    <fragment
        android:id="@+id/browserMainFragment"
        android:name="marabillas.loremar.beedio.browser.fragment.BrowserMainFragment"
        android:label="BrowserMainFragment" />
    <fragment
        android:id="@+id/downloadMainFragment"
        android:name="marabillas.loremar.beedio.download.fragments.DownloadMainFragment"
        android:label="DownloadMainFragment" />

    <action
        android:id="@+id/action_global_homeMainFragment"
        app:destination="@id/homeMainFragment" />

    <action
        android:id="@+id/action_global_browserMainFragment"
        app:destination="@id/browserMainFragment" />

    <action
        android:id="@+id/action_global_downloadMainFragment"
        app:destination="@id/downloadMainFragment" />
</navigation>