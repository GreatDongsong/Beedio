<layout>

    <marabillas.loremar.beedio.browser.views.ExpandingItemView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black1"
        android:padding="16dp"
        android:theme="@style/FoundVideosListItem">

        <ImageView
            android:id="@+id/found_video_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/yellow_icon_background"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_video_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/found_video_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toEndOf="@id/found_video_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/found_video_end_tool_barrier" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/found_video_top_barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="found_video_icon,found_video_name"
            app:barrierDirection="bottom" />

        <TextView
            android:id="@+id/found_video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            app:layout_constraintTop_toBottomOf="@id/found_video_name"
            app:layout_constraintStart_toEndOf="@id/found_video_icon" />

        <ImageView
            android:id="@+id/found_video_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?found_video_more_background"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_unfold_more_white_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/found_video_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/found_video_end_tool_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="found_video_more,found_video_checkbox"
            app:barrierDirection="start" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/found_video_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/found_video_top_barrier">

            <ProgressBar
                android:id="@+id/found_video_details_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/found_video_details_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/found_video_details_more_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/more"
                android:textColor="@color/found_video_details_more_text_color"
                android:gravity="center"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/found_video_details_thumbnail"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:padding="1dp"
                android:background="@drawable/found_video_thumbnail_background"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/found_video_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/found_video_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:padding="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete_white_24dp"
            app:layout_constraintTop_toBottomOf="@id/found_video_details"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/found_video_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginEnd="56dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_edit_white_24dp"
            app:layout_constraintTop_toBottomOf="@id/found_video_details"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/found_video_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginEnd="56dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_download_white_24dp"
            app:layout_constraintTop_toBottomOf="@id/found_video_details"
            app:layout_constraintEnd_toEndOf="parent" />

    </marabillas.loremar.beedio.browser.views.ExpandingItemView>

</layout>