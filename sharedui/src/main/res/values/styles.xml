<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/black1</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="popupMenuStyle">@style/DarkPopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/DarkPopupMenu.TextLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/DarkPopupMenu.TextSmall</item>
    </style>

    <style name="DarkAppBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black1</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DarkToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black1</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:itemTextAppearance">@style/CustomItemTextAppearance</item>
    </style>

    <style name="CustomItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="DarkPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/black3</item>
    </style>

    <style name="DarkPopupMenu.TextLarge" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="DarkPopupMenu.TextSmall" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

</resources>